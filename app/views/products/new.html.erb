<h1>Add new product</h1>

<%= form_for(@product) do |f| %>
  <div>
    <%= f.label(:name) %><br>
    <%= f.text_field(:name) %><br><br>
  </div>

  <div>
    <%= f.label(:price) %><br>
    <%= f.text_field(:price) %><br><br>
  </div>

  <div>
    <%= f.label(:description) %><br>
    <%= f.text_field(:description) %><br><br>
  </div>

  <div>
    <%= f.label(:inventory) %><br>
    <%= f.text_field(:inventory) %><br><br>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
